<div class="container">
    <div class="container-inner">
      <h3>PDR FORM</h3>
      <div>
        <form>
          <div class="form-group">
            <label for="callNumber">AAA Call # / Cash Tag #</label>
            <input type="text" class="form-control" name="aaa_call_num" id="callNumber" placeholder="12543">
          </div>
          <div class="form-group">
            <label for="date">Date Of Call</label>
            <input type="date" class="form-control" name="date" id="date" >
          </div>
          <div class="form-group">
            <label for="driver">Drivers Name</label>
            <input type="text" class="form-control" name="driver" id="driver" placeholder="Drivers Name">
          </div>
          
          <div class="form-group">
            <label for="damages">Descripton of Damages</label>
            <textarea class="form-control" name="damages" id="damages" rows="3"></textarea>
          </div>
          <br>
          <div class="form-group">
            <label for="picture-up-load">Upload pictures</label>
            <input type="file" class="form-control-file" id="upload">
            <br>
          </div>
          <div class="form-group">
            <label for="signature">Customers Signature</label>
            <input type="text" class="form-control" id="signature" placeholder="Jane Smith">
          </div>
          <hr>
          <button id="pdrSubmit" type="submit" class="btn btn-danger">Submit</button>
        </form>
      </div> 
    </div>
  </div>
  <!--To display some PDR data-->
  <h5>PDR data:</h5>
        <ul id="pdr-list" class="list-group">
          {{#each pdr}}
          <li data-id="{{this.id}}" class="list-group-item">
            <span>
            <p id="driver-{{this.id}}">{{this.id}} |Driver: {{this.driver}}  | Call Number: {{this.aaa_call_num}} | Damages: {{this.damages}}  |  Date: {{this.date}}</p>
            </span>
            <button data-id={{this.id}} class="btn btn-danger float-right delete">ï½˜</button>
          </li>
          {{/each}}
        </ul>